<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/smartDeviceIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/smart_device_img"
        android:src="@drawable/baseline_highlight_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/smartDeviceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/smart_lamp_title"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/smartDeviceIcon"
        app:layout_constraintStart_toEndOf="@+id/smartDeviceIcon"
        app:layout_constraintTop_toTopOf="@id/smartDeviceIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>